<div class='card'>
  <div class='row'>
    <div class="col-md-4">
      <img src="{{profile.image}}" style="width: 250px" alt="">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{profile.name}}</h5>
        <p class="card-text">{{profile.email}}</p>
        <p class="card-text">{{profile.Comments.length}} 已評論餐廳</p>
        {{#ifCond profile.id user.id}}
        <a href="/users/{{profile.id}}/edit">
          <button type='submit' class='btn btn-primary'>edit</button>
        </a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class='card mt-3'>
  <div class='row'>
    <div class="col-md-12">
      <div class="card-header">{{profile.Comments.length}} 已評論餐廳</div>
      <div class="card-body">
        {{#each profile.Comments}}
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img src="{{this.Restaurant.image}}" style="width: 50px" alt="">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>