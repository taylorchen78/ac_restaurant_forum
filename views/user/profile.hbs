<div class='card'>
  <div class='row'>
    <div class='col-md-4'>
      <img class='card-img' src='{{profile.image}}'>
    </div>
    <div class='col-md-8'>
      <div class='card-body'>
        <h5 class='card-title'>{{profile.name}}</h5>
        <p class='card-text'>{{profile.email}}</p>
        <p class='card-text mb-1'>{{uniqueComments.length}} 已評論餐廳</p>
        <p class='card-text mb-1'>{{profile.FavoritedRestaurants.length}} 收藏的餐廳</p>
        <p class='card-text mb-1'>{{profile.Followings.length}} followings (追蹤者)</p>
        <p class='card-text'>{{profile.Followers.length}} followers (追隨者)</p>
        {{#ifCond profile.id user.id}}
        <a href='/users/{{profile.id}}/edit'>
          <button type='submit' class='btn btn-primary'>edit</button>
        </a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-md-4'>
    <div class='card mt-4'>
      <div class='card-header'>{{profile.Followings.length}} followings (追蹤者)</div>
      <div class='card-body' style="overflow: auto; height: 80px;">
        {{#each profile.Followings}}
        <a href='/users/{{this.id}}'>
          <img src='{{this.image}}' style='width: 50px'>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class='col-md-8'>
    <div class='card mt-4'>
      <div class='card-header'>{{uniqueComments.length}} 已評論餐廳</div>
      <div class='card-body' style="overflow: auto; height: 80px;">
        {{#each uniqueComments}}
        <a href='/restaurants/{{this.Restaurant.id}}'>
          <img src='{{this.Restaurant.image}}' style='width: 50px'>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-md-4'>
    <div class='card mt-4'>
      <div class='card-header'>{{profile.Followers.length}} followers (追隨者)</div>
      <div class='card-body' style="overflow: auto; height: 80px;">
        {{#each profile.Followers}}
        <a href='/users/{{this.id}}'>
          <img src='{{this.image}}' style='width: 50px'>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class='col-md-8'>
    <div class='card mt-4'>
      <div class='card-header'>{{profile.FavoritedRestaurants.length}} 收藏的餐廳</div>
      <div class='card-body' style="overflow: auto; height: 80px;">
        {{#each profile.FavoritedRestaurants}}
        <a href='/restaurants/{{this.id}}'>
          <img src='{{this.image}}' style='width: 50px'>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>